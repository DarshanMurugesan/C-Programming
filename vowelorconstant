#include<stdio.h>
int main()
{
 char ch;
 printf("Enter a character:%c\n");
 scanf("%c",&ch);
 if(ch>='A'&&ch<='Z');
  printf("%c is a vowel\n",ch);
 switch(ch)
 {
     case'a':
     case'e':
     case'i':
     case'o':
     case'u':
     break;
  if((ch>='a'&&ch<='z'))
     {
         printf("%c is a constant\n",ch);
     }
   else 
   { 
       printf("The valid input:Please enter a letter.\n");
   }
 }
}
 
