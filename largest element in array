#include<stdio.h>
void main()
{
    int n,i;
    printf("Enter the number of element in an array \n");
    scanf("%d",&n);
    int arr[n];
    for (i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    int largest=arr[0];
    for (i=1;i<n;i++)
    {
        if(arr[i]>largest)
        {
            largest=arr[i];
        }
    }
    printf("The largest element in the array is %d\n",largest);
}
